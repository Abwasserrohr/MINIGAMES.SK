on skript start: 
  wait 1 tick
  mgResetMinigameInitScripts()

function mgResetMinigameInitScripts():
  set {_games::*} to mgGetAvailableMinigames()
  loop {_games::*}:
    execute console command "/sk disable MINIGAMES.SK/games/%loop-value%/init.sk"
  wait 1 second
  mgClearGameData()
  mgSetCurrentGame("")
  mgStartGame(getGameLobby())
